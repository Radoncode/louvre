{% extends "LPReservationBundle::layout.html.twig" %}

{% block title %}
	Billeterie - {{ parent() }}
{% endblock %}


{% block lpreservation_body %}

  
  {% for message in app.session.flashbag.get('noticea') %}
  <div class="alert alert-info" role="alert">Message flash : {{ message }}</div>
  {% endfor %}
  

  <div class="row">
  <h2 class="well">Commande des billets</h2>
  {{ include("LPReservationBundle:Reservation:ticketform.html.twig") }}
  </div>
  

  {% for message in app.session.flashbag.get('noticeb') %}
  <div class="alert alert-success" role="alert">Message flash : {{ message }}</div>
  {% endfor %}

    {% for message in app.session.flashbag.get('noticec') %}
<div class="alert alert-info" role="alert">Message flash : {{ message }}</div>
{% endfor %}

  <div class="row"> 
  <div class="col-sm-12">
  <h2 class="well" >Réservation n°{{ order }} en cours </h2>
  <table class="table table-bordered">
   <thead>
   	  <tr>
   	    <th >Numéro du Ticket</th>
   	    <th >Coordonnées</th>
        <th>Prix du billet</th>
   	  </tr> 
   </thead>
   <tbody>

   {% if listTickets is defined  %}
     {% for ticket in listTickets %}
       <tr>
         <td>{{ ticket.id }}</td>
         <td> {{ ticket.firstname }} {{ ticket.name }} né(e) le {{ ticket.birthday|date('d/m/Y') }} | {{ ticket.country }}</td>
         <td> {{ ticket.price }}€</td>
           <td><a href="{{ path('lp_reservation_delete',{'id': ticket.id})}}" class="btn btn-danger">Supprimer</a></td>
       </tr>
     {% endfor %}
  {% endif %}
</tbody>
</table>  
</div>
</div>
    <input type="submit" name="saveAndAdd" formnovalidate="formnovalidate" class="btn btn-primary"/>
{{ form_end(form) }}
{% endblock %}
             
                              
       


